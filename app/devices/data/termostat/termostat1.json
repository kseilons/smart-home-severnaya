{
 "name": "Котел",
 "room": "Котельня",
 "type": "devices.types.thermostat",
 "mqtt": {
  "temperature": {
   "set": "/devices/yandex/controls/termostat1/temperature",
   "listen": "/devices/yandex/controls/termostat1/temperature/out"
  },
  "thermostat": {
   "set": "/devices/yandex/controls/termostat1/thermostat",
   "listen": "/devices/yandex/controls/termostat1/thermostat/out"
  },
  "on": {
   "set": "/devices/yandex/controls/termostat1/on",
   "listen": "/devices/yandex/controls/termostat1/on/out"
  }
 },
 "capabilities": [
   {
    "type": "devices.capabilities.mode",
    "retrievable": true,
    "parameters": {
     "instance": "thermostat",
     "modes":  [
      {
       "value": "min"
      },
      {
       "value": "normal"
      },
      {
       "value": "max"
      },
      {
       "value": "auto"
      }
     ],
     "ordered": false
    },
    "state": {
     "instance": "thermostat",
     "value": "auto"
    }
   },
  {
   "type": "devices.capabilities.on_off",
   "retrievable": true,
   "state": {
    "instance": "on",
    "value": false
   }
  },
  {
   "type": "devices.capabilities.range",
   "retrievable": true,
   "parameters": {
    "instance": "temperature",
    "unit": "unit.temperature.celsius",
    "range": {
     "min": 0,
     "max": 100,
     "precision": 0.1
    }
   },
   "state": {
    "instance": "temperature",
    "value": 0
   }
  }
  ]
}
